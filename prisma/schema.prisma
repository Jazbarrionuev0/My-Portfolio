generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id            String     @id @default(cuid())
  title         String
  slug          String     @unique
  excerpt       String?
  contentJson   Json?
  contentHtml   String?
  contentText   String?
  status        PostStatus @default(DRAFT)
  published     Boolean    @default(false)
  publishedAt   DateTime?
  readingTime   Int?
  viewCount     Int        @default(0)
  featuredImage String?
  tags          String[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("posts")
}

model UserSettings {
  id          String  @id @default("settings")
  firstName   String?
  lastName    String?
  email       String?
  bio         String?
  avatar      String?
  location    String?
  website     String?
  githubUrl   String?
  linkedinUrl String?
  theme       String  @default("system")
  language    String  @default("en")
  timezone    String  @default("UTC")

  @@map("settings")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
